{% block body %}
            {{ form_start(form, {'attr': {'class': 'form-group'}}) }}
                {% for row in form %}
                    <div class="mb-3">
                        {{ form_label(row, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(row, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(row) }}
                    </div>
                {% endfor %}
                <div class="text-center mt-4">
                    <button type="submit" class="btn custom-btn">Envoyer</button>
{% endblock %}
