{% extends 'base.html.twig' %}

{% block title %}Détails de la Vente: {{ vente.id }}{% endblock %}

{% block stylesheets %}
<style>
/* Conteneur principal pour centrer le contenu */
.vente-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #f8f9fa; /* Fond léger */
}

/* Carte principale de la vente */
.vente-card {
    background: #ffffff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    width: 100%;
    text-align: left;
}

/* Titre de la vente */
.vente-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: #343a40;
}

/* Section des détails */
.vente-detail {
    margin-bottom: 1.5rem;
}

.vente-detail h5 {
    font-size: 1.2rem;
    color: #495057;
    margin-bottom: 0.5rem;
}

.vente-detail p {
    font-size: 1rem;
    color: #212529;
    margin: 0;
}

/* Actions (boutons) */
.vente-actions {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    gap: 1rem;
}
</style>
{% endblock %}

{% block body %}
<div class="vente-container">
    <div class="vente-card">
        <h1 class="vente-title">Détails de la Vente</h1>
        <div class="vente-detail">
            <h5>Date de la vente</h5>
            <p>{{ vente.dateVente ? vente.dateVente|date('Y-m-d H:i:s') : 'Non spécifiée' }}</p>
        </div>

        <div class="vente-detail">
            <h5>Montant Total</h5>
            <p>{{ vente.montantTotal }} €</p>
        </div>

        <div class="vente-detail">
            <h5>Mode de Paiement</h5>
            <p>{{ vente.modePaiement ? vente.modePaiement.value : 'N/A' }}</p>
        </div>

        <div class="vente-detail">
            <h5>Client</h5>
            <p>{{ vente.clients.nom }} {{ vente.clients.prenom }}</p>
        </div>

        <div class="vente-detail">
            <h5>Véhicule</h5>
            <p>{{ vente.vehicule.marque }} {{ vente.vehicule.modele }}</p>
        </div>

        <div class="vente-actions">
            <a href="{{ path('app_vente_index') }}" class="btn btn-back">Retour à la liste</a>
            <a href="{{ path('app_vente_edit', {'id': vente.id}) }}" class="btn btn-edit">Modifier</a>
            {{ include('vente/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
