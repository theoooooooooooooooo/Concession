{% extends 'base.html.twig' %}

{% block title %}Categorie: {{ categorie.nom }}{% endblock %}

{% block body %}
<div class="category-container">
    <div class="category-card">
        <h1 class="category-title">{{ categorie.nom }}</h1>
        <div class="vehicles-list">
            {% if vehicules|length > 0 %}
                {% for vehicule in vehicules %}
                    <div class="vehicle-item">
                        <p><strong>Marque:</strong> {{ vehicule.marque }}</p>
                        <p><strong>Modèle:</strong> {{ vehicule.modele }}</p>
                        <p><strong>Prix:</strong> {{ vehicule.prix }} €</p>
                    </div>
                    <hr>
                {% endfor %}
            {% else %}
                <p class="no-vehicles">Aucun véhicule trouvé</p>
            {% endif %}
        </div>

        <div class="category-actions">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-back">Retour</a>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-edit">Modifier</a>
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
</div>
<style>
    /* Conteneur principal */
    .category-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f8f9fa; /* Fond léger */
    }

    /* Carte principale */
    .category-card {
        background: #ffffff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        text-align: center;
    }

    /* Titre de la catégorie */
    .category-title {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: #343a40;
    }

    /* Liste des véhicules */
    .vehicles-list {
        text-align: left;
    }

    /* Élément de véhicule */
    .vehicle-item {
        margin: 1rem 0;
    }

    /* Aucun véhicule trouvé */
    .no-vehicles {
        color: #dc3545; /* Rouge pour le texte d'avertissement */
        font-style: italic;
    }

    /* Séparateur entre véhicules */
    hr {
        border: 0;
        height: 1px;
        background-color: #dee2e6;
        margin: 1rem 0;
    }

    /* Actions */
    .category-actions {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    /* Boutons */
    .btn {
        text-decoration: none;
        padding: 0.6rem 1.2rem;
        border-radius: 4px;
        font-size: 1rem;
        transition: background-color 0.3s, color 0.3s;
    }

    /* Bouton Retour */
    .btn-back {
        background-color: #343a40;
        color: #ffffff;
    }
    .btn-back:hover {
        background-color: #495057;
    }

    /* Bouton Modifier */
    .btn-edit {
        background-color: #ffc107;
        color: #212529;
    }
    .btn-edit:hover {
        background-color: #d39e00;
    }
</style>
{% endblock %}