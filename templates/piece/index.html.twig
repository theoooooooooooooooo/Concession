{% extends 'base.html.twig' %}

{% block title %}Pièces{% endblock %}

{% block body %}
    <h1>Pièces</h1>
    <a href="{{ path('app_piece_new') }}" class="custom-btn">Nouveau</a>
    <br>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>QuantiteStock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td>{{ piece.nom }}</td>
                <td>{{ piece.prix }}</td>
                <td>{{ piece.quantiteStock }}</td>
                <td>
                    <a href="{{ path('app_piece_edit', {'id': piece.id}) }}" class="custom-btn">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
